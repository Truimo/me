---
interface Props {
    error: unknown
}

const { error } = Astro.props;

console.error(error);
---
<div class="grid justify-items-end h-screen place-content-center px-4 gap-2">
    <p class="uppercase tracking-widest">Service issues occurred</p>
    <p>
        <button class="btn retry">Retry</button>
    </p>
</div>

<script>
const button = document.querySelector('button.retry');

function reloadPage() {
    location.reload();
}

if (button) {
    button.addEventListener('click', reloadPage, false);
}
</script>
