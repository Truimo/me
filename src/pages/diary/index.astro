---
import type { DiaryItem } from '@/libs/notion';
import { getCollection } from 'astro:content';
import Layout from '@/layouts/MainLayout.astro';
import DiaryList from '@/components/diary/DiaryList.astro';

const posts = await getCollection('diary');

const list: Array<DiaryItem> = posts.filter(it => it.data.type === 'words').map(it => it.data);
---
<Layout title='Diary' description='There are my diary.'>
    <div class="mx-auto max-w-3xl">
        <div class="mx-4">
            <p class="text-2xl font-bold">Latest DiaryðŸ’«</p>
        </div>
        <div class="select-none mx-4 mt-4">
            <DiaryList list={list} />
        </div>
    </div>
</Layout>
