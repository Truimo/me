---
import type {HTMLAttributes} from 'astro/types';
import clsx from 'clsx';

import '@/styles/iconfont.css';

interface Props extends HTMLAttributes<'i'> {
    class?: string
    name: string
}

const {
    name, class: className,
} = Astro.props;

const clasz = clsx('select-none icon', `icon-${name}`, className);
---
<i class={clasz}></i>
