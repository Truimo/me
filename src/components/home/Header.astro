---
import { Image } from 'astro:assets'

interface Props {
    title?: string;
    description?: string;
}

const {
    title = 'Xiaomo Qian',
    description = 'Meeting you is the best of the best.',
} = Astro.props;
---
<header class="font-normal">
    <div class="flex items-end gap-x-4">
        <div class="shrink-0">
            <Image src="/avatar.jpg" alt="avatar" height="96" width="96" loading="eager"
                class="rounded-xl w-24 h-24 aspect-square" priority={true}></Image>
        </div>
        <div>
            <h1 class="text-2xl font-bold my-2">{title}</h1>
            <p>{description}</p>
        </div>
    </div>
</header>
